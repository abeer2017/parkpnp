<div class="pull-right">
  <%= link_to 'Request', user_requests_path(current_user), class: 'btn btn-primary' %>
  <%= link_to 'Booking', user_bookings_path(current_user, @bookings), class: 'btn btn-success' %>
</div><br /><br />
<table class="table table-striped tag-center">
  <tr>
    <th>Area No.</th>
    <th>Cost per hour</th>
    <th>Book</th>
  </tr>
  <% @parking_spaces.each do |parking_space| %>
    <tr>
      <td><%= parking_space.area_no %></td>
      <td><%= parking_space.cost_per_hour %></td>
      <td><%= link_to 'Book', parking_space_path(parking_space), :class => 'btn btn-warning btn-sm'  %></td>
    </tr>
  <% end %>
</table>