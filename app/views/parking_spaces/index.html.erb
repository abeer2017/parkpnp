<h1>Listing Parking Spaces</h1>
<% if current_user.role == true %>
  <%= link_to 'New parking_space', new_parking_space_path %>
<% end %>
<table>
  <tr>
    <th>Area No.</th>
    <th>Cost per hour</th>
    <th colspan="3"></th>
  </tr>
 
  <% @parking_spaces.each do |parking_space| %>
    <tr>
      <td><%= parking_space.area_no %></td>
      <td><%= parking_space.cost_per_hour %></td>
      <td><%#= link_to 'Show', parking_space_path(parking_space) %></td>
      <td><%#= link_to 'Edit', edit_parking_space_path(parking_space) %></td>
      <% if current_user.role == true %>
      <td><%= link_to 'Destroy', parking_space_path(parking_space),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
  <% end %>
</table>