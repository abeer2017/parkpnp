<!DOCTYPE html>
<html>
  <head>
    <title>Parkpnp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="main-container" class="container">
      <div class="row">
        <a href="/welcome/index"><h3>ParkPnp</h3></a>
        <% if notice %>
          <p class="alert alert-success"><%= notice %></p>
        <% end %>
        <% if alert %>
          <p class="alert alert-danger"><%= alert %></p>
        <% end %>
        <p class="pull-right">
        <% if user_signed_in? %>
          Logged in as <strong><%= current_user.email %></strong>.
          <%= link_to 'Edit profile', edit_user_registration_path, :class => 'btn btn-info btn-xs' %> |
          <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'btn btn-danger btn-xs'  %>
        <% else %>
          <%= link_to "Sign up", new_user_registration_path, :class => 'btn btn-primary btn-xs'  %> |
          <%= link_to "Login", new_user_session_path, :class => 'btn btn-info btn-xs'  %>
        <% end %>
      </div>
      <hr />
      <div class="row">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
